{
  "$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
  "organizeImports": {
    "enabled": true,
    "ignore": ["build", "styled-system", "public"]
  },
  "linter": {
    "ignore": ["build", "styled-system", "public", "**/*.d.ts"]
  },
  "formatter": {
    "indentStyle": "space",
    "ignore": ["build", "styled-system", "public"]
  },
  "vcs": {
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
